{{#if notSearched}}

{{#if isAdmin}}
<h1>Projects</h1>
<h3>Manage Teams</h3>
<div class="form">
    <form action="/project/all/admin" method="POST">
        <label>Team</label>
        <select name="teamId">

            {{#each teams}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}

        </select>
        <label>Project</label>
        <select name="projectId">

            {{#each projects}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}

        </select>
        <input type="submit" value="Distribute">
    </form>
</div>
{{else}}
<h1>Projects</h1>
<form class="search" action="/project/all/user" method="POST">
    <label>Seach: </label>
    <input type="text" name="searchVal">
    <input type="submit" value="Search">
</form>
<div class="projects">

    {{#each allProjects}}

    {{#if hasTeam}}
    <div class="project">
        <h2>{{name}}</h2>
        <h3>Team: {{team.name}}</h3>
        <p>Description: {{description}}</p>
    </div>
    {{else}}
    <div class="project">
        <h2>{{name}}</h2>
        <h3>Team: No Team assigned</h3>
        <p>Description: {{description}}</p>
    </div>
    {{/if}}

    {{/each}}
</div>
{{/if}}

{{else}}
<h1>Projects</h1>
<form class="search" action="/project/all/user" method="POST">
    <label>Seach: </label>
    <input type="text" name="searchVal">
    <input type="submit" value="Search">
</form>

{{#if showProjects}}

{{#each filteredProjects}}

{{#if hasTeam}}
<div class="project">
    <h2>{{name}}</h2>
    <h3>Team: {{team.name}}</h3>
    <p>Description: {{description}}</p>
</div>
{{else}}
<div class="project">
    <h2>{{name}}</h2>
    <h3>Team: No Team assigned</h3>
    <p>Description: {{description}}</p>
</div>
{{/if}}

{{/each}}

{{else}}

<div class="project">
    <h2>There are no projects with name: {{name}} </h2>
</div>

{{/if}}

{{/if}}