<h1>My Profile</h1>
<div class="profile-box">
    <img src="{{user.imageUrl}}">
    <div class="profile">
        <div class="info">
            <h3>My Teams</h3>

            {{#if user.hasTeams}}
            {{#each teams}}
            <form action="/team/leave/{{_id}}" method="POST">
                <p>{{name}}</p>
                <input type="submit" value="Leave Team" />
            </form>
            {{/each}}
        </div>
        <div class="more-info">
            <h3>My Projects</h3>
            {{#if user.hasProjects}}
            {{#each projects}}
            <p>{{name}}</p>
            {{/each}}
            {{else}}
            <p>You have no projects!</p>
            {{/if}}
        </div>
        {{else}}
        <p>You have no team</p>
        {{/if}}
    </div>
</div>