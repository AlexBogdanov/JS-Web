<h1>Chatroom with {{receiver.username}}</h1>

{{#if otherIsBlocked}}
<form method="post" class="chat-form" action="/unblock/{{receiver._id}}">
    <button class="btn btn-success">Unblock</button>
</form>
{{else}}
<form method="post" class="chat-form" action="/block/{{receiver._id}}">
    <button class="btn btn-danger">Block</button>
</form>
{{/if}}

{{#each messages}}

{{#if isMine}}

    {{#if isImg}}
    <div class="message-row">
        <img class="thread-message right" src="{{content}}" />
    </div>
    {{else}}
    <div class="message-row">
        <span class="thread-message right">{{content}}</span>
    </div>
    {{/if}}

{{else}}

    {{#if isImg}}
    <div class="message-row">
        <img class="thread-message left" src="{{content}}" />
    </div>
    {{else}}
    <div class="message-row">
        <span class="thread-message left">{{content}}</span>
    </div>
    {{/if}}

{{/if}}

{{/each}}

<form method="post" class="chat-form" action="/messages/add/{{receiver.username}}">

    {{#if iAmBlocked}}
    <textarea rows="5" name="message" placeholder="message" disabled></textarea>
    {{else}}
    <textarea rows="5" name="message" placeholder="message"></textarea>
    {{/if}}
    
    <input value="{{thread._id}}" name="threadId" hidden />
    <button class="btn btn-primary send">Send</button>
</form>